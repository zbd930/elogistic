        <!--<result property="contact_address" column="contact_address"></result>-->
        <!--<result property="company_name" column="company_name"></result>-->
    <!--</association>-->
    
    <!-- resultMap指定使用上面定义的结果集,查询使用关联查询，查询列要和上面的column对应 -->
    <!--<!- 查询订单&ndash;&gt;-->
        <select id="get_orders" resultMap="orders">
                 select s.method,s.etd,s.`desc`,s.eta,s.mudigang,o.dest,f.volume,f.weight,o.status,a.openid,s.qiyungang,d.cut_time,d.cut_end,f.ups,c.contact_address,o.numbers,o.id,s.user_id,o.address_id
                  from fba.ship_schdule as s,fba.schdule_details as d,fba.orders as o,fba.subscriber_address as a,fba.supplier_address as c,fba.orders_details as f
                  where s.id=d.ship_id and s.id=o.item_id and a.id=o.address_id and s.user_id=c.user_id and a.openid=#{openid} and f.order_id=o.id order by o.id ;
            </select>

    <!--(UNIX_TIMESTAMP(s.eta) - UNIX_TIMESTAMP(s.etd))/(60*60*24) as shichang-->
            <!--获取符合方式所有订单-->
             <select id="get_items" parameterType="com.duogesi.entities.items" resultMap="result">
                   select s.user_id,s.`desc`,s.eta,s.etd,s.id,s.`method`,s.mudigang,s.qiyungang,s.status,d.weight,d.volume,d.ship_id,d.cut_time,d.cut_end,c.contact_address,c.contact_phone
                    from fba.ship_schdule as s,fba.schdule_details as d,supplier_address as c
                    where qiyungang=#{qiyungang}  and method=#{method} and status=0 and s.user_id=c.user_id and s.id=d.ship_id and d.volume>0 and d.weight>0 order by s.etd ;
            </select>

            <select id="get_para" resultType="com.duogesi.entities.details">
                select schdule_details.weight,schdule_details.volume from schdule_details where ship_id=#{id}
            </select>

            <update id="update_items" parameterType="com.duogesi.entities.details">
                update schdule_details set
               weight=weight-#{weight},volume=volume-#{volume} where ship_id=#{id}
            </update>

</mapper>